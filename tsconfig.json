{
  "include": [
    "src/index.ts",
    "src/core/**/*.ts",
    "src/internal/**/*.ts",
    "src/plugins/iframe/**/*.ts",
    "src/plugins/storage/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist/",
    "lib": ["dom", "ESNext"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {},
    "strict": true,
    "downlevelIteration": true
  }
}
