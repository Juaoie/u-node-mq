{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test/*.ts"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist/",
    "lib": ["dom", "ESNext"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {},
    "downlevelIteration": true
  }
}
