{
  "include": ["src/index.ts", "src/operators/**/*", "src/plugins/iframe/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "diagnostics": true,
    "outDir": "./dist/",
    "lib": ["dom", "ESNext"],
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {},
    "strict": true,
    "downlevelIteration": true
  }
}
