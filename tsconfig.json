{
  "include": ["unmq/**/*.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["element-plus/global"],
    "target": "ES5",
    "lib": ["ES6"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "&/*": ["unmq/*"],
      "@a/*": ["src/assets/*"]
    }
  }
}
